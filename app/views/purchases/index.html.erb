<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Purchase Id</th>
      <th>Status</th>
      <th> Last update </th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.id %></td>
        <td><%= purchase.status %></td>
        <td><%= purchase.updated_at %></td>
        <td><%= purchase.orders.inject(0){|sum,x| sum + x.totalPrice }%></td>
        <td><%= link_to 'Show', purchase_path(purchase)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>