<p id="notice"><%= notice %></p>

<p>
  <strong>ID:</strong>
  <%= @purchase.id %>
</p>

<p>
  <strong>Status:</strong>
  <%= @purchase.status %>
</p>

<p>
  <strong>Last update:</strong>
  <%= @purchase.updated_at %>
</p>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase.orders.each do |order| %>
      <tr>
        <td><%= order.item.name %></td>
        <td><%= order.quantity %></td>
        <td><%= order.totalPrice.to_s %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user == @purchase.user and @purchase.status == 'open' %>
  <%= link_to 'Submit purchase', purchase_submit_path(@purchase) %>

  <%= link_to 'Edit purchase', purchase_edit_path(@purchase) %>
<% end %>
<% if current_user.role? :admin and @purchase.status == 'pending'%>
  <%= link_to 'Approve purchase', purchase_close_path(@purchase) %>
  <%= link_to 'Cancel purchase', purchase_cancel_path(@purchase) %>
<% end %>
<%= link_to 'Back', purchases_index_path %>
